{
  "$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
  "extends": ["@l2beat/biome-config/base"],
  "files": {
    "maxSize": 10485760,
    "ignore": [
      "cache/",
      "discovery/**/.code",
      "discovery/**/.code@*",
      "discovery/**/.flat*",
      "discovery/**/mermaid",
      "discovery/**/.mermaid",
      "discovery/**/.flat",
      "discovery/**/script-ts"
    ]
  },
  "linter": {
    "rules": {
      "nursery": {
        "useSortedClasses": "off"
      }
    }
  }
}
